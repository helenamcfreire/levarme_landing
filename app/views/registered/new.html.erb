<!-- Top Starts -->
<div class="top">

  <!-- Header Starts -->
  <header>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="logo">
            <h1><a href="http://levar.me">Levar.<span class="tblue">me</span></a></h1>
          </div>
        </div>
        <div class="navigation pull-right">
          <a href="#">Portuguese</a>
          <a href="#howitworks">How it works</a>
        </div>
      </div>
    </div>
  </header>
  <!-- Header Ends -->

  <!-- Hero starts -->
  <div class="hero">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="intro">
            <h2>Ridesharing<span class="tblue">.</span> Cabsharing<span class="tblue">.</span> to parties<span class="tblue">.</span></h2>
            <p>Levar.me connects to your Facebook and uses your friend list to find the cheapest way to the event</p><br>
            <%= form_for(@registered, :url => {:action => 'create'}, :html => { :class => "form-register" }) do |e| %>
                <div class="input-append">
                  <%= e.text_field :email, :maxlength => 50, :placeholder => 'Insert your email to join the beta', :class => "span2" %>
                  <%= e.submit :class => "btn btn-success", :value => "Join" %>
                </div>
                <% if flash[:error] -%>
                    <p style="color: #da4f49">
                      <%=h flash[:error] %>
                    </p>
                <% end -%>
                <% if flash[:success] -%>
                    <p style="color: #5cb85c">
                      <%=h flash[:success] %>
                    </p>
                <% end -%>
          <% end %>


          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Hero ends -->


</div>
<!-- Top Ends -->

